<div class="portletBody">
	<h4>
		$tlang.getString("create.uploads")
	</h4>
	#if ($itemAlertMessage)
		<div class="alertMessage">$tlang.getString("gen.alert") $validator.escapeHtml($itemAlertMessage)</div>
		<div style="display:block;clear:both" ></div>
	#end
	<p class="instr">
		$tlang.getString("instr.upload")
	</p>
	<form name="addContentForm" id="addContentForm" method="post" action="#toolForm("ResourcesHelperAction")"  enctype="multipart/form-data">
		<div id="addFileDiv">
			<input type="hidden" name="fileCount" id="fileCount" value="$pipes.size()" />
			#set($i = 0)
			#foreach($pipe in $pipes)
				#set($i = $i + 1)
				<p class="shorttext">
					<label for="content$i">$tlang.getString("label.upload")</label>
					<input type="file" name="content$i" id="content$i" class ="upload" />
				</p>
			#end
		</div>
		<p class="act">
			<input type="button" name="addfile" id="addfile" onclick="javascript:addFileInput();" value="$tlang.getString("create.addfile")" />
			<span class="submitnotif" id="submitnotif01" style="visibility:hidden">$tlang.getString("gen.proces")</span>
		</p>
		<p class="act">
			<input type="button" class="active" name="savechanges" id="saveChanges" onclick="javascript:showNotif('submitnotif','saveChanges','addContentForm');document.getElementById('addContentForm').action='#toolLink("ResourcesHelperAction" "doUpload")&flow=save';submitform('addContentForm');" value="$tlang.getString("create.continue")" accesskey="s" />
			<input type="button" name="cancel" onclick="javascript:document.getElementById('addContentForm').action='#toolLink("ResourcesHelperAction" "doCancel")';submitform('addContentForm');" value="$tlang.getString("create.cancel")" accesskey="x" />
			<span id="submitnotif" style="visibility:hidden">$tlang.getString("gen.proces")</span>
		</p>
	</form>
</div>
